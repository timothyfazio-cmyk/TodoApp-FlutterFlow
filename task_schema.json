{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Task",
  "description": "Schema for task documents in the Firestore tasks collection",
  "type": "object",
  "properties": {
    "title": {
      "description": "The title of the task",
      "type": "string"
    },
    "details": {
      "description": "Detailed description of the task",
      "type": "string"
    },
    "completed": {
      "description": "Whether the task has been completed",
      "type": "boolean"
    },
    "user": {
      "description": "Reference path to the user who owns the task",
      "type": "string",
      "pattern": "^/users/[A-Za-z0-9_-]+$"
    },
    "created": {
      "description": "The time when the task was created",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "title",
    "completed",
    "user",
    "created"
  ],
  "additionalProperties": false
}
